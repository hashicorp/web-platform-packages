{
  "extends": "../cli/config/tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es2021"],
    "jsx": "react",
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["./src"],
  "exclude": [
    "base/generators/*/templates/*",
    "**/*.test.*",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "./dist/**",
    "./scripts/**"
  ]
}
