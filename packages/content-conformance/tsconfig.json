{
  "extends": "../cli/config/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "jsx": "react",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["./src", "../../global.d.ts"],
  "exclude": [
    "base/generators/*/templates/*",
    "**/*.test.*",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "./dist/**",
    "./scripts/**"
  ]
}
