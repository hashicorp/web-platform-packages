// Slightly different config from our nextjs default since we target node.js
{
  "extends": "./packages/cli/config/tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist"
  },
  "exclude": [
    "packages/cli/generators/*/templates/**",
    "**/*.test.*",
    "**/fixtures/**/*",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "./dist/**",
    "./scripts/**"
  ],
  "include": ["**/*.ts"]
}
